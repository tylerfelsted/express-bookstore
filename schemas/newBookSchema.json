{
    "$id": "http://example.com/example.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "default": {},
    "description": "The root schema comprises the entire JSON document.",
    "examples": [
        {
            "isbn": "0691161518",
            "amazon-url": "http://a.co/eobPtX2",
            "author": "Matthew Lane",
            "language": "english",
            "pages": 264,
            "publisher": "Princeton University Press",
            "title": "Power-Up: Unlocking Hidden Math in Video Games",
            "year": 2017
        }
    ],
    "required": [
        "isbn",
        "author",
        "language",
        "pages",
        "title",
        "year"
    ],
    "title": "The root schema",
    "type": "object",
    "properties": {
        "isbn": {
            "$id": "#/properties/isbn",
            "default": "",
            "examples": [
                "0691161518"
            ],
            "title": "The isbn schema",
            "type": "string"
        },
        "amazon-url": {
            "$id": "#/properties/amazon-url",
            "default": "",
            "examples": [
                "http://a.co/eobPtX2"
            ],
            "title": "The amazon-url schema",
            "type": "string"
        },
        "author": {
            "$id": "#/properties/author",
            "default": "",
            "examples": [
                "Matthew Lane"
            ],
            "title": "The author schema",
            "type": "string"
        },
        "language": {
            "$id": "#/properties/language",
            "default": "",
            "examples": [
                "english"
            ],
            "title": "The language schema",
            "type": "string"
        },
        "pages": {
            "$id": "#/properties/pages",
            "default": 0,
            "examples": [
                264
            ],
            "title": "The pages schema",
            "exclusiveMinimum": 0,
            "type": "integer"
        },
        "publisher": {
            "$id": "#/properties/publisher",
            "default": "",
            "examples": [
                "Princeton University Press"
            ],
            "title": "The publisher schema",
            "type": "string"
        },
        "title": {
            "$id": "#/properties/title",
            "default": "",
            "examples": [
                "Power-Up: Unlocking Hidden Math in Video Games"
            ],
            "title": "The title schema",
            "type": "string"
        },
        "year": {
            "$id": "#/properties/year",
            "default": 0,
            "examples": [
                2017
            ],
            "title": "The year schema",
            "maximum": 2022,
            "type": "integer"
        }
    },
    "additionalProperties": true
}